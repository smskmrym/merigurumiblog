@model BlogUpdateModel

<form method="post" asp-action="Update" class="p-3" enctype="multipart/form-data">

<input type="hidden" aps-for="@Model.Id">
<div class="form-group">
    <label asp-for="Title"></label>
    <input  class="form-control" asp-for="Title">
</div>
<div class="form-group">
    <label asp-for="ShortDescription"></label>
    <textarea asp-for="ShortDescription" class="form-control"></textarea>
</div>
<div class="form-group">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
</div>
<div class="form-group">
    <label asp-for="Image"></label>
    <input class="form-control-file" type="file" asp-for="Image">
</div>
<div class="form-group">
<button type="submit" class="btn btn-block btn-info">Kaydet</button>
</div>
</form>
@section Css{
    <link rel="stylesheet" href="/lib/Trumbowyg/dist/ui/trumbowyg.min.css">
}
@section JavaScript{
    <script src="/lib/Trumbowyg/dist/trumbowyg.min.js"></script>
    <script>
        $("#Description").trumbowyg();
    </script>
}
